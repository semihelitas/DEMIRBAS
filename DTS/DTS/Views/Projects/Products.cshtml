@model IEnumerable<DTS.Models.ProjectProducts>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Heading -->
<div class="card mb-4 wow fadeIn ustNav">
    <!--Card content-->
    <div class="card-body d-sm-flex justify-content-between">

        <h4 class="mb-2 mb-sm-0 pt-1">
            &nbsp;
            <i class="fas fa-project-diagram" style="color:#139747"></i>
            <a href="#" style="color:#139747"> &nbsp; Projeler &nbsp; | &nbsp; @ViewBag.ProjectName Projesi Ürünleri</a>
        </h4>

        <form class="d-flex justify-content-center">
            <!-- Default input -->
            <input id="search" placeholder="Ürün Ara" class="form-control" autocomplete="off"> &nbsp;

        </form>
    </div>
</div>
<!-- Heading -->
<!-- Main Layout Card -->
<div class="row wow fadeIn">
    <!--Grid column-->
    <div class="col-md-12 mb-4">

        <!--Card-->
        <div class="card">

            <!--Card content-->
            <div class="card-body" id="printable">

                <!-- Table  -->
                <table class="table table-hover tablom">
                    <!-- Table head -->
                    <thead class="lighten-4">
                        <tr>
                            <th>SERİ NUMARASI</th>
                            <th>MARKA</th>
                            <th>MODEL</th>
                            <th>TEDARİKÇİ</th>
                            <th>ADET</th>
                            <th>TARİH</th>
                            <th>İLETİŞİM</th>
                            <th>GARANTİ BAŞ.</th>
                            <th>GARANTİ BİT.</th>

                            <th @*style="width: 10%"*@ id="Ekle" class="not-printable">
                                <button class="btn btn-outline btn-sm my-0 p" style="width:100%; position:center; margin-left: auto; background-color:whitesmoke; color:forestgreen;" onclick="location.href='@Url.Action("Add", "Products")'">
                                    @*<i class="fas fa-plus"></i>*@
                                    EKLE
                                </button>
                            </th>

                        </tr>
                    </thead>
                    <!-- Table head -->
                    <!-- Table body -->
                    <tbody id="myTable">
                        @foreach (var item in Model)
                        {

                            <tr style="font-weight:bold;">

                                <td>@Html.DisplayFor(modelItem => item.productSerialNumber)</td>
                                <td>@Html.DisplayFor(modelItem => item.productBrand)</td>
                                <td>@Html.DisplayFor(modelItem => item.productModel)</td>
                                <td>@Html.DisplayFor(modelItem => item.productProvider)</td>
                                <td>@Html.DisplayFor(modelItem => item.productAmount)</td>
                                <td>@Html.DisplayFor(modelItem => item.registerDateTime)</td>
                                <td>@Html.DisplayFor(modelItem => item.productServiceContact)</td>
                                <td>@Html.DisplayFor(modelItem => item.productWarrantyStartDate)</td>
                                <td>@Html.DisplayFor(modelItem => item.productWarrantyFinishDate)</td>

                                @*<td>@Html.DisplayFor(modelItem => item.ProductWarrantyDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ServiceContact)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ProductFeatures)</td>*@
                            <td id="Btns" class="not-printable">
                                <button class="btn-outline-success" type="button" onclick="location.href='@Url.Action("Update", "Project", new { id = item.projectCode })'">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn-outline-success" type="button" onclick="location.href='@Url.Action("Update", "Project", new { id = item.projectCode })'">
                                    <i class="fas fa-info"></i>
                                </button>
                                <button class="btn-outline-success btn-sil" data-product-id="@item.projectCode" type="button" data-toggle="modal" data-target="#modalSil" )'">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                            </tr>
                        }
                    </tbody>
                    <!-- Table body -->
                </table>
                <!-- Table  -->
            </div>
        </div>
        <!--/.Card-->

    </div>
    <!--Grid column-->
</div>


<script>
    $(document).ready(function () {
        $('#search').keyup(function () {

            // Search text
            var text = $(this).val();

            // Hide all content class element
            $('.filterVariable').hide();

            // Search and show
            $('.filterVariable:contains("' + text + '")').show();

        });
//});
</script>



